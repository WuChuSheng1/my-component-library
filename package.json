{
  "name": "my-wcs-component-library",
  "type": "module",
  "version": "0.0.0",
  "description": "",
  "exports": {
    ".": {
      "types": "./dist/es/index.d.ts",
      "import": "./dist/es/index.es.js",
      "require": "./dist/lib/index.cjs.js"
    },
    "./*": "./*"
  },
  "main": "./dist/lib/index.umd.js",
  "module": "./dist/es/index.es.js",
  "types": "./dist/es/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "prepare": "simple-git-hooks",
    "dev": "pnpm -r --filter @my-wcs/* run dev",
    "build": "pnpm -r --filter @my-wcs/* run build",
    "build:common": "pnpm --filter @my-wcs/common build",
    "build:components": "pnpm --filter @my-wcs/components build",
    "build:entry": "pnpm --filter @my-wcs/entry build",
    "build:resolver": "pnpm --filter @my-wcs/resolver build",
    "typecheck": "pnpm -r --filter @my-wcs/* run typecheck",
    "lint": "pnpm -r --filter @my-wcs/* run lint",
    "test": "pnpm -r --filter @my-wcs/* run test",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "pnpm version-packages && pnpm install --no-frozen-lockfile && pnpm build && changeset publish",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs",
    "play:dev": "pnpm --filter ./play dev",
    "play:build": "pnpm --filter ./play build",
    "play:preview": "pnpm --filter ./play preview",
    "eslint-view": "eslint-config-inspector",
    "prettier:check": "pnpm exec prettier . --check",
    "prettier:write": "pnpm exec prettier . --write"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "packageManager": "pnpm@10.17.1",
  "devDependencies": {
    "@changesets/cli": "^2.27.9",
    "@eslint/config-inspector": "^1.3.0",
    "@eslint/css": "^0.11.1",
    "@eslint/js": "^9.36.0",
    "@eslint/json": "^0.13.2",
    "@eslint/markdown": "^7.3.0",
    "@types/node": "^24.5.2",
    "@vitejs/plugin-vue": "^6.0.1",
    "@vue/test-utils": "^2.4.6",
    "eslint": "^9.36.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-vue": "^10.5.0",
    "globals": "^16.4.0",
    "jiti": "^2.6.0",
    "jsdom": "^27.0.1",
    "prettier": "3.6.2",
    "simple-git-hooks": "^2.13.1",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.44.1",
    "vite": "^7.1.7",
    "vite-plugin-dts": "^4.5.4",
    "vite-plugin-eslint": "^1.8.1",
    "vitepress": "^1.6.4",
    "vitest": "^3.2.4",
    "vue": "^3.5.22"
  },
  "peerDependencies": {
    "vue": "^3.5.22"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint && pnpm test && pnpm prettier:check"
  },
  "pnpm": {
    "overrides": {
      "vite": "npm:rolldown-vite@7.1.12"
    }
  }
}

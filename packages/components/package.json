{
  "name": "@my-wcs/components",
  "version": "0.0.0",
  "type": "module",
  "private": false,
  "description": "Vue components for my-wcs library",
  "main": "dist/lib/index.cjs.js",
  "module": "dist/es/index.es.js",
  "types": "dist/es/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/es/index.d.ts",
      "import": "./dist/es/index.es.js",
      "require": "./dist/lib/index.cjs.js"
    },
    "./*": "./dist/*"
  },
  "files": [
    "dist"
  ],
  "sideEffects": [
    "**/style.css"
  ],
  "scripts": {
    "dev": "vite build --watch",
    "build": "vite build",
    "typecheck": "vue-tsc --noEmit -p tsconfig.json",
    "lint": "eslint \"src/**/*.{ts,vue}\"",
    "test": "vitest -c ../../vitest.config.ts run --passWithNoTests"
  },
  "peerDependencies": {
    "vue": "^3.4.0 || ^3.5.0"
  },
  "dependencies": {
    "@my-wcs/common": "workspace:*"
  },
  "devDependencies": {
    "vue": "^3.5.22"
  }
}

{
  "compilerOptions": {
    "target": "es2018",
    "lib": ["esnext", "dom"],
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "strict": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "types": ["node"]
  },
  "include": [
    "src/**/*.ts",
    "docs/**/*.ts",
    "packages/**/*.ts",
    "packages/**/*.vue",
    "vite.config.ts"
  ]
}
